{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 mb-4">
				<h1>Modifier un article</h1>
			</div>
			<div class="col-12">
				{{ form_start(form) }}
				{{ form_row(form.title) }}
				{{ form_row(form.category) }}
